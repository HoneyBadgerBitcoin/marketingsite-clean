---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.tsx';
import Hero from '../components/Hero.tsx';
import Features from '../components/Features.astro';
import ATMShowcase from '../components/ATMShowcase.astro';
import Cryptocurrencies from '../components/Cryptocurrencies.astro';
import CTA from '../components/CTA.astro';
import Stats from '../components/Stats.tsx';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="HoneyBadger - Buy and Sell Crypto with Cash">
  <div class="min-h-screen bg-white">
    <Header client:load />
    <main>
      <Hero client:load />
      <!-- Warm moving background wrapper with seamless edges -->
      <div class="relative" style="background: linear-gradient(to bottom, white 0%, #fdfcfb 15%, #f9f4ee 50%, #fdfcfb 85%, white 100%)">
        <!-- Animated warm background layers - contained within bounds -->
        <div class="absolute inset-0 overflow-hidden">
          <div class="absolute inset-8 opacity-90">
            <div class="absolute inset-0 animate-float-slow" style="background: radial-gradient(ellipse 600px 400px at 70% 30%, rgba(241, 161, 59, 0.6) 0%, rgba(250, 191, 110, 0.3) 40%, transparent 70%)"></div>
            <div class="absolute inset-0 animate-float-slower" style="background: radial-gradient(ellipse 500px 350px at 30% 70%, rgba(247, 152, 52, 0.55) 0%, rgba(253, 221, 179, 0.25) 35%, transparent 65%); animation-delay: 3s"></div>
            <div class="absolute inset-0 animate-float-slowest" style="background: radial-gradient(ellipse 700px 300px at 60% 60%, rgba(241, 161, 59, 0.5) 0%, rgba(254, 247, 237, 0.2) 50%, transparent 80%); animation-delay: 6s"></div>
          </div>
        </div>
        <div class="relative z-10">
          <Features />
          <ATMShowcase />
        </div>
      </div>
      <!-- Cool moving background wrapper for lower sections -->
      <div class="relative" style="background: linear-gradient(to bottom, white 0%, #f8fbff 15%, #f0f7ff 50%, #f8fbff 85%, white 100%)">
        <!-- Animated cool background layers - contained within bounds -->
        <div class="absolute inset-0 overflow-hidden">
          <div class="absolute inset-8 opacity-85">
            <div class="absolute inset-0 animate-float-cool-slow" style="background: radial-gradient(ellipse 700px 450px at 30% 30%, rgba(65, 109, 146, 0.5) 0%, rgba(78, 148, 255, 0.25) 40%, transparent 70%)"></div>
            <div class="absolute inset-0 animate-float-cool-slower" style="background: radial-gradient(ellipse 600px 400px at 70% 70%, rgba(54, 91, 122, 0.45) 0%, rgba(123, 185, 255, 0.2) 35%, transparent 65%); animation-delay: 4s"></div>
            <div class="absolute inset-0 animate-float-cool-slowest" style="background: radial-gradient(ellipse 800px 350px at 50% 60%, rgba(65, 109, 146, 0.4) 0%, rgba(185, 217, 255, 0.18) 50%, transparent 80%); animation-delay: 7s"></div>
          </div>
        </div>
        <div class="relative z-10">
          <Cryptocurrencies />
          <CTA />
          <Stats client:load />
        </div>
      </div>
    </main>
    <Footer />
  </div>
</BaseLayout>
