---
import { ArrowRight } from 'lucide-react';
---

<section class="py-20">
  <div class="container-custom">
    <div class="bg-primary-500 rounded-2xl p-12 md:p-16 text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-5xl font-bold text-white mt-4 mb-6">
          Cash In on Crypto Today
        </h2>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button class="px-8 py-4 bg-white text-primary-500 rounded-lg hover:bg-gray-50 transition-all duration-300 font-semibold flex items-center justify-center">
            Buy Crypto
            <ArrowRight className="ml-2 h-5 w-5" />
          </button>
          <button class="px-8 py-4 bg-dark-accent-400 text-white rounded-lg hover:bg-dark-accent-500 transition-all duration-300 font-semibold">
            Find ATM
          </button>
        </div>
      </div>
    </div>
  </div>
</section>
