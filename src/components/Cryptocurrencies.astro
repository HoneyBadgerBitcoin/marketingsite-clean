---
import { Bitcoin } from "lucide-react";
import VideoPlayer from "./VideoPlayer.astro";

const cryptos = [
  {
    name: "Bitcoin",
    symbol: "BTC",
    canBuy: true,
    canSell: true,
    color: "text-orange-500",
    buyPrice: "$187,393.69",
    sellPrice: "$146,559.62",
  },
  {
    name: "Ethereum",
    symbol: "ETH",
    canBuy: true,
    canSell: true,
    color: "text-purple-500",
    buyPrice: "$4,256.88",
    sellPrice: "$4,102.33",
  },
  {
    name: "Litecoin",
    symbol: "LTC",
    canBuy: true,
    canSell: true,
    color: "text-gray-500",
    buyPrice: "$191.07",
    sellPrice: "$149.70",
  },
];
---

<section class="py-20">
  <div class="container-custom">
    <div class="text-center mb-12">
      <h2 class="text-5xl font-bold text-gray-900">
        Cryptocurrencies we offer
      </h2>
      <p class="text-lg text-gray-600 mt-4">
        Trade your favorite digital currencies with ease and confidence
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 items-center max-w-6xl mx-auto">
      {/* Left side - Badger Image */}
      <div class="flex items-center justify-center lg:order-1">
        <div class="relative w-full max-w-md">
          <VideoPlayer 
            src="/crypto-hero.webm" 
            alt="Honey Badger with Bitcoin animated video" 
            class="drop-shadow-xl"
          />
        </div>
      </div>

      {/* Right side - Crypto Cards */}
      <div class="lg:order-2 flex flex-col justify-center items-center">
        <div class="grid gap-4 max-w-sm w-full">
          {cryptos.map((crypto, index) => (
            <div class="bg-white rounded-xl p-4 shadow-lg hover:shadow-2xl transition-all duration-300 border border-gray-100/50">
              {/* Header with Icon and Name */}
              <div class="flex items-center mb-3">
                <div class={`inline-flex items-center justify-center w-10 h-10 rounded-full bg-gray-100 mr-3 flex-shrink-0`}>
                  <Bitcoin className={`h-5 w-5 ${crypto.color}`} />
                </div>
                <div>
                  <h3 class="font-bold text-gray-900">{crypto.name}</h3>
                  <p class="text-xs text-gray-500">{crypto.symbol}</p>
                </div>
              </div>
              
              {/* Pricing Section */}
              <div class="grid grid-cols-2 gap-3 mb-3">
                {crypto.canBuy && (
                  <div class="text-left">
                    <div class="flex items-center mb-1">
                      <svg class="w-3 h-3 text-green-500 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11l5-5m0 0l5 5m-5-5v12"></path>
                      </svg>
                      <span class="text-xs font-medium text-gray-700">Buy</span>
                    </div>
                    <p class="font-bold text-sm text-gray-900">{crypto.buyPrice}</p>
                  </div>
                )}
                {crypto.canSell && (
                  <div class="text-left">
                    <div class="flex items-center mb-1">
                      <svg class="w-3 h-3 text-red-500 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 13l-5 5m0 0l-5-5m5 5V6"></path>
                      </svg>
                      <span class="text-xs font-medium text-gray-700">Sell</span>
                    </div>
                    <p class="font-bold text-sm text-gray-900">{crypto.sellPrice}</p>
                  </div>
                )}
              </div>
              
              {/* Action Buttons */}
              <div class="flex gap-2">
                {crypto.canBuy && (
                  <button class="flex-1 px-3 py-1.5 bg-green-100 hover:bg-green-200 text-green-700 rounded-lg text-xs font-semibold transition-colors">
                    Buy {crypto.symbol}
                  </button>
                )}
                {crypto.canSell && (
                  <button class="flex-1 px-3 py-1.5 bg-red-100 hover:bg-red-200 text-red-700 rounded-lg text-xs font-semibold transition-colors">
                    Sell {crypto.symbol}
                  </button>
                )}
              </div>
            </div>
          ))}
        </div>
        
        <div class="mt-8 text-center">
          <button class="text-primary-500 font-semibold hover:text-primary-600 transition-colors">
            View All Supported Currencies →
          </button>
        </div>
      </div>
    </div>
    
    {/* Price Update Notice */}
    <div class="text-center mt-8">
      <p class="text-sm text-gray-500">
        Prices update every 30 seconds • Last updated: <span class="font-medium">2:17 PM EST</span>
      </p>
    </div>
  </div>
</section>
