---
import { Banknote, CreditCard, Smartphone, DollarSign } from 'lucide-react';

const services = [
  {
    icon: Banknote,
    title: 'Buy Crypto With Cash',
    description: 'Find a HoneyBadger ATM near you',
    action: 'Buy Crypto',
    bgColor: 'bg-white',
    iconBg: 'bg-primary-500',
  },
  {
    icon: DollarSign,
    title: 'Sell Crypto for Cash',
    description: 'Easily sell your crypto for cash at an ATM or online',
    action: 'Sell Crypto',
    bgColor: 'bg-white',
    iconBg: 'bg-primary-500',
  },
  {
    icon: Smartphone,
    title: 'Guided purchase (OTC)',
    description: 'For high-value purchases and direct support, our team is here to assist you.',
    action: 'Contact Specialist',
    bgColor: 'bg-white',
    iconBg: 'bg-primary-500',
  },
];
---

<section id="services" class="py-20">
  <div class="container-custom">
    <div class="text-center mb-12">
      <span class="text-primary-500 font-semibold text-sm uppercase tracking-wider">OUR SERVICES</span>
      <h2 class="text-5xl font-bold text-gray-900 mt-2">
        Making Crypto Accessible
      </h2>
    </div>

    <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      {services.map((service, index) => (
        <div class="group">
          <div class={`${service.bgColor} rounded-2xl p-8 shadow-lg hover:shadow-2xl transition-all duration-300 cursor-pointer h-full border border-gray-100/50`}>
            <div class={`${service.iconBg} inline-flex p-3 rounded-lg mb-4`}>
              <service.icon className="h-6 w-6 text-white" />
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">
              {service.title}
            </h3>
            <p class="text-sm text-gray-600 mb-4">
              {service.description}
            </p>
            <button class="text-primary-500 font-medium text-sm hover:text-primary-600 transition-colors">
              {service.action} â†’
            </button>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
