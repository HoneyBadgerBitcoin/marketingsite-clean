---
import VideoPlayer from "./VideoPlayer.astro";
// Hero component - no server-side logic needed
---

<section class="pt-24 pb-12 md:pt-32 md:pb-20 bg-white relative">
  <div class="container-custom relative overflow-visible">
    <div class="grid lg:grid-cols-2 gap-8 items-center relative">
      <!-- Left Content -->
      <div class="relative z-20 lg:pr-8 hero-content">
        <h1 class="text-6xl md:text-7xl lg:text-8xl font-heading text-gray-900 leading-tight text-left lg:text-left drop-shadow-sm">
          Buy Bitcoin in{" "}
          <span class="text-primary-500 drop-shadow-sm">Minutes</span>,
          <br />
          Not Hours
        </h1>
        <p class="mt-6 text-lg text-gray-600 leading-relaxed text-left lg:text-left font-body">
          HoneyBadger makes it easy to buy Bitcoin, Ethereum, and Litecoin
          online, at an ATM, or by phone
        </p>

        <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-start">
          <button class="px-8 py-4 bg-dark-accent-400 text-white rounded-lg hover:bg-dark-accent-500 transition-all duration-300 font-medium flex items-center justify-center">
            Find ATM
            <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </button>
          <button class="px-8 py-4 bg-primary-500 text-white rounded-lg hover:bg-primary-600 transition-all duration-300 font-medium">
            Buy Online
          </button>
        </div>

        <!-- Stats -->
        <div class="mt-12 grid grid-cols-3 gap-6">
          <div class="text-center lg:text-left">
            <div class="text-3xl font-bold text-primary-500">220+</div>
            <div class="text-sm text-gray-600">ATM Locations</div>
          </div>
          <div class="text-center lg:text-left">
            <div class="text-3xl font-bold text-primary-500">3</div>
            <div class="text-sm text-gray-600">Cryptocurrencies</div>
          </div>
          <div class="text-center lg:text-left">
            <div class="text-3xl font-bold text-primary-500">60K+</div>
            <div class="text-sm text-gray-600">Happy Customers</div>
          </div>
        </div>
      </div>

      <!-- Right Content - Coin Rain -->
      <div class="relative hidden lg:block hero-image">
        <!-- Coin rain video container -->
        <div class="relative w-full h-[750px] flex items-center justify-center">
          <VideoPlayer 
            src="/crypto-hero-rolling.webm" 
            alt="Bitcoin coins falling from sky animated video" 
            class="w-full h-full drop-shadow-xl"
            style="filter: drop-shadow(0 10px 25px rgba(0,0,0,0.15));"
          />
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-content {
    animation: fadeInLeft 0.6s ease-out;
  }
  
  .hero-image {
    animation: fadeInRight 0.6s ease-out 0.2s both;
  }

  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>
